<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/brand_primary" android:alpha="0.1" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/brand_secondary" android:alpha="0.1" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="@color/brand_secondary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/brand_surface" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/brand_primary"
                android:alpha="0.1" />
        </shape>
    </item>
</selector>