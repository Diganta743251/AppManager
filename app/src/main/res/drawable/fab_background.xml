<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/brand_secondary"
                android:endColor="@color/brand_primary"
                android:type="linear" />
            <size android:width="56dp" android:height="56dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/brand_primary"
                android:endColor="@color/brand_secondary"
                android:type="linear" />
            <size android:width="56dp" android:height="56dp" />
        </shape>
    </item>
</selector>