<resources>

    <!-- DeviceGuard Pro Custom Theme -->
    <style name="DeviceGuardTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primary_variant</item>
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorSecondaryVariant">@color/brand_secondary_variant</item>
        <item name="colorAccent">@color/brand_accent</item>
        <item name="colorSurface">@color/brand_surface</item>
        <item name="colorBackground">@color/brand_background</item>
        <item name="colorError">@color/brand_error</item>
        
        <!-- Status and Navigation Bar -->
        <item name="android:statusBarColor">@color/brand_primary</item>
        <item name="android:navigationBarColor">@color/brand_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Custom UI Components -->
        <item name="materialButtonStyle">@style/DeviceGuard.Button.Primary</item>
        <item name="materialCardViewStyle">@style/DeviceGuard.Card</item>
        <item name="floatingActionButtonStyle">@style/DeviceGuard.FAB</item>
        <item name="android:progressBarStyleHorizontal">@style/DeviceGuard.ProgressBar</item>
        <item name="searchViewStyle">@style/DeviceGuard.SearchView</item>
        <item name="alertDialogTheme">@style/DeviceGuard.Dialog</item>
        <item name="tabStyle">@style/DeviceGuard.TabLayout</item>
        
        <!-- Enhanced Material 3 -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brand_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/DeviceGuardTheme</item>
    </style>
    
    <!-- DeviceGuard Pro Modern Splash Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brand_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_deviceguard_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/DeviceGuardTheme</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/brand_primary</item>
    </style>

    <style name="AppTheme.Splash.Black" parent="AppTheme.Splash">
        <item name="postSplashScreenTheme">@style/AppTheme.Black</item>
    </style>

    <!-- DeviceGuard Pro Custom Button Styles -->
    <style name="DeviceGuard.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_primary_modern</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="DeviceGuard.Card" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/brand_surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeColor">@color/brand_primary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="DeviceGuard.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:background">@drawable/fab_background</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">12dp</item>
        <item name="pressedTranslationZ">16dp</item>
    </style>

    <style name="DeviceGuard.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_modern</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="DeviceGuard.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_background</item>
        <item name="android:elevation">4dp</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
    </style>

    <style name="DeviceGuard.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowElevation">16dp</item>
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorSecondary">@color/brand_secondary</item>
    </style>

    <style name="DeviceGuard.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabSelectedTextColor">@color/brand_primary</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="tabIndicatorColor">@color/brand_primary</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="AppTheme.AppWidgetContainerParent" parent="AppTheme">
        <item name="appWidgetRadius">24dp</item>
        <item name="appWidgetPadding">16dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="AppTheme.AppWidgetContainer" parent="AppTheme.AppWidgetContainerParent" />

    <style name="AppTheme.AppWidgetContainer.IconOnly" parent="AppTheme.AppWidgetContainerParent">
        <item name="appWidgetPadding">8dp</item>
        <item name="appWidgetRadius">8dp</item>
    </style>

    <style name="Widget.AppTheme.AppWidgetOverlay" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
    </style>

    <style name="Widget.AppTheme.AppWidget" parent="Widget.AppTheme.AppWidgetOverlay" />

</resources>
